<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 content">

  <h3>以下の内容でひとりごとする。</h3>

  <%= form_for(@monologue) do |f| %>
    <%= f.hidden_field :content %>
    <h3><%= @monologue.content %></h3>
    <%= f.submit "ひとりごとする",class: 'btn btn-primary btn-block' %>
  <% end %>

  <%= form_for(@monologue, url: new_monologue_path, method: 'get') do |f| %>
    <%= f.hidden_field :content %>
    <%= f.submit "もどる", name: 'back',class: 'btn btn-default btn-block' %>
  <% end %>
  </div>
</div>
  